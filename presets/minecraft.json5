// Custom Renovate Datasource for Minecraft release versions
{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  customDatasources: {
    minecraft: {
      defaultRegistryUrlTemplate: "https://launchermeta.mojang.com/mc/game/version_manifest_v2.json",
      format: "json",
      transformTemplates: [
        '{ "releases": versions[type="release"].{"version": id, "releaseTimestamp": releaseTime} }',
      ],
    },
    "minecraft-snapshot": {
      defaultRegistryUrlTemplate: "https://launchermeta.mojang.com/mc/game/version_manifest_v2.json",
      format: "json",
      transformTemplates: [
        '{ "releases": versions[type="snapshot"].{"version": id, "releaseTimestamp": releaseTime} }',
      ],
    },
  },
}
